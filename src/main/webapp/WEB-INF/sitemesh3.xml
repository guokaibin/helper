<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
      <mime-type>text/html</mime-type>
      <mime-type>IE=edge</mime-type>
      <mime-type>no-siteapp</mime-type>
      <mime-type>width=device-width</mime-type>
      
      <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
      <mapping path="/*" decorator="/WEB-INF/views/decorator.jsp" />
  
      <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
      <mapping path="/index.jsp" exclue="true" />
      <mapping path="/login.jsp" exclue="true" />
      <mapping path="/login.do"  exclue="true" />   
      <mapping path="/loginpage.do" exclue="true"/>
      <mapping path="/admin_form_webUploaderView.do" exclue="true"/>
      <mapping path="/admin_form_webUploaderView.jsp" exclue="true" />
</sitemesh>